<Label>:
    font_size: 25


<Button>:
    font_size: 50
    color: 0.3, 0.6, 0.7, 1




<FloatLayout>:


    GridLayout:
        cols: 1


        Label:
            text: "Player number - 2:"
            font_size: 40
            markup: True
            shorten: True
            ellipsis_options: {'color': (0.3, 0.6, 0.7, 1),'underline':True}

        Label:
            text: "last player throw: 8 and get from the stack"


        GridLayout:
            cols: 3

            Button:
                text: "lost: 8"
                font_size: 25

            Label:
                text: "lucky card - 3"


            Button:
                text: "stack"
                font_size: 25

        GridLayout:
            cols: 5
            Button:
                text: "10"
                pos_hint: {"x": 0.}

            ToggleButton:
                id: btn
                pos_hint: {"x": 0.2}
                padding_left: 50
                text: "6" if btn.state == "normal" else "down"
                backround_color: 0.3, 0.4, 0.5, 1


            Button:
                text: "6"
                pos_hint: {"x": 0.4}

            Button:
                text: "2"
                pos_hint: {"x": 0.6}

            Button:
                text: "0"
                pos_hint: {"x": 0.8}
