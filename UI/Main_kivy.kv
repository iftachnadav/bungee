<Label>:
    font_size: 25


<Button>:
    font_size: 50
    color: 0.3, 0.6, 0.7, 1


<FloatLayout>:

    id_buttons: id_buttons
    GridLayout:
        cols: 1

        Label:
            text: "Player number - 2:"
            font_size: 40
            markup: True
            shorten: True
            ellipsis_options: {'color': (0.3, 0.6, 0.7, 1),'underline':True}

        Label:
            text: "last player throw: 8 and get from the stack"

        Label:
            text: "lucky card - 3"
            font_size: 30

        GridLayout:
            cols: 3

            Button:
                id: "lost_btn"
                text: "lost: 8"
                font_size: 25
                disabled: True

            Button_1:
                id: "bungee_btn"
                text: "to saw Bungee"
                font_size: 25
                my_cards: self.my

            Button:
                id: "stack_btn"
                text: "stack"
                font_size: 25
                disabled: True

        GridLayout:
            cols: 5

            ToggleButton:
                text: "10"
                id: btn
                pos_hint: {"x": 0.}

            ToggleButton:
                text: "6"
                id: id_buttons
                pos_hint: {"x": 0.2}


            ToggleButton:
                text: "6"
                id: btn
                pos_hint: {"x": 0.}

            ToggleButton:
                text: "2"
                pos_hint: {"x": 0.}

            ToggleButton:
                text: "0"
                id: btn
                pos_hint: {"x": 0.}
